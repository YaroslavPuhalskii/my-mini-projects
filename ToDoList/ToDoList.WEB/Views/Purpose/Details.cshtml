@model ToDoList.WEB.Models.PurposeIndexView

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="nameModalOperation" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Information about purpose</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3><b>Name</b> : @Model.Name</h3>
                <h3><b>Descroption</b> : @Model.Description</h3>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-secondary" onclick="return DeletePurpose(@Model.PurposeId)">Delete</a>
                <a href="#" class="btn btn-primary" onclick="return EditPurpose(@Model.PurposeId)">Edit</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#myModal').ready(() => {
        showDetailsForm();
    });
    function showDetailsForm() {
        $('#myModal').modal('show');
    }
</script>